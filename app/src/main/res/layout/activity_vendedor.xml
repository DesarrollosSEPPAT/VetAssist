<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".Vendedor">

    <RelativeLayout
        android:id="@+id/seccionAV1"
        android:layout_width="match_parent"
        android:layout_height="90sp"
        android:background="@drawable/backgroundverdeclaro"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20sp"
            android:src="@drawable/logoredondo" />

        <!-- Texto de Login -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80sp"
            android:textColor="@color/white"
            android:text="Hola David Perez"
            android:textSize="30sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="320sp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/seccionAV1" >

        <!-- Texto de Login -->
        <TextView
            android:id="@+id/loginAV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/orange"
            android:text="Control de pedidos"
            android:layout_marginTop="40sp"
            android:textSize="32sp"
            android:textStyle="bold" />

        <!-- SecciÃ³n de Botones del vendedor -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40sp"
            android:layout_below="@id/loginAV" >

            <!-- Boton 1 -->
            <LinearLayout
                android:layout_width="150sp"
                android:layout_height="170sp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/backgroundnaranjaclaro"
                android:orientation="vertical">

                <!-- Texto de Login -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="NUEVO PEDIDO"
                    android:layout_marginTop="10sp"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/CrearPedido"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:src="@drawable/logocarrito"
                    android:layout_marginTop="10sp"
                    android:layout_gravity="center"
                    android:background="@drawable/backgroundnaranjaclaro"
                    android:scaleType="fitXY"
                    android:contentDescription="Crear un nuevo pedido"
                    />

            </LinearLayout>

            <!-- Boton 2 -->
            <LinearLayout
                android:layout_width="150sp"
                android:layout_height="170sp"
                android:layout_alignParentRight="true"
                android:background="@drawable/backgroundnaranjaclaro"
                android:orientation="vertical">

                <!-- Texto de Login -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="EDITAR PEDIDO"
                    android:layout_marginTop="10sp"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/ModificarPedido"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:src="@drawable/logoeditar"
                    android:layout_marginTop="10sp"
                    android:layout_gravity="center"
                    android:background="@drawable/backgroundnaranjaclaro"
                    android:scaleType="fitXY"
                    android:contentDescription="Editar un pedido activo"
                    />

            </LinearLayout>

            <!-- Boton 3 -->
            <LinearLayout
                android:layout_width="150sp"
                android:layout_height="170sp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="190sp"
                android:background="@drawable/backgroundnaranjaclaro"
                android:orientation="vertical">

                <!-- Texto de Login -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="ANULAR PEDIDO"
                    android:layout_marginTop="10sp"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/AnularPedido"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:src="@drawable/logoanular"
                    android:layout_marginTop="10sp"
                    android:layout_gravity="center"
                    android:background="@drawable/backgroundnaranjaclaro"
                    android:scaleType="fitXY"
                    android:contentDescription="Anular un pedido"
                    />

            </LinearLayout>

            <!-- Boton 4 -->
            <LinearLayout
                android:layout_width="150sp"
                android:layout_height="170sp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="190sp"
                android:background="@drawable/backgroundnaranjaclaro"
                android:orientation="vertical">

                <!-- Texto de Login -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="CREAR CLIENTE"
                    android:layout_marginTop="10sp"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/CrearCliente"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:src="@drawable/logocrearcliente"
                    android:layout_marginTop="10sp"
                    android:layout_gravity="center"
                    android:background="@drawable/backgroundnaranjaclaro"
                    android:scaleType="fitXY"
                    android:contentDescription="Crear un nuevo cliente"
                    />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/seppat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FROM SEPPAT SAS"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15sp"
        />

</RelativeLayout>